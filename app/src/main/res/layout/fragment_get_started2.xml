<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.GetStarted2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/fredokaone_regular"
            android:text="Now!"
            android:gravity="center"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_medium"
            android:textSize="16dp"
            android:textColor="@color/Grey"
            android:text="One tap for foods, accessories, health care products &amp; digital gadgets\n Grooming &amp; boarding\nEasy &amp; best consultation bookings"
            android:gravity="center"
            android:padding="5dp"
            />

    </LinearLayout>
</FrameLayout>