<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:padding="8dp"
	android:background="@drawable/bg_item_background"
	android:layout_margin="8dp">

	<com.google.android.material.card.MaterialCardView
		android:id="@+id/iv_pet_image"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_margin="@dimen/cardview_compat_inset_shadow"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		android:backgroundTint="@color/Yellow"
		app:strokeColor="@android:color/transparent"
		app:cardCornerRadius="20dp"
		app:cardElevation="15dp">

		<ImageView
			android:layout_width="90dp"
			android:layout_height="90dp"
			android:src="@drawable/dog1"
			android:scaleType="centerInside"
			android:backgroundTint="@color/Yellow"/>
	</com.google.android.material.card.MaterialCardView>


	<!-- Pet Name -->

	<!-- Pet Icon (Link Icon) -->

	<TextView
		android:id="@+id/tv_pet_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="30dp"
		android:fontFamily="@font/fredoka_semibold"
		android:text="Bella"
		android:textColor="#000000"
		android:textSize="20sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@id/iv_pet_icon"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@id/iv_pet_image"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/iv_pet_icon"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:src="@drawable/link_ic"
		android:contentDescription="Link Icon"
		android:layout_margin="8dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/tv_pet_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>
