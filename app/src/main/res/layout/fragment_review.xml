<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Review">

    <!-- Top Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/Primary_color">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/baseline_chevron_left_24"
            android:backgroundTint="@android:color/transparent"
            />

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Reviews"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/fredoka_semibold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Rating Text -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="4.5"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_header" />

    <!-- Rating Bar -->
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="4.5"
        android:theme="@style/RatingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <!-- Number of Reviews -->
    <TextView
        android:id="@+id/number_of_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/fredoka_light"
        android:text="Based on 89 reviews"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

    <!-- Ratings List (ProgressBars) -->
    <LinearLayout
        android:id="@+id/ratings_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/number_of_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <!-- Excellent -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excellent"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginEnd="45dp" />

            <ProgressBar
                android:layout_width="0dp"
                android:layout_height="8dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressTint="#4CAF50"
                android:layout_weight="1"
                android:progress="80"
                android:max="100"
                android:progressDrawable="@drawable/rounded_progress_bar"
                />

        </LinearLayout>

        <!-- Good -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginEnd="68dp" />

            <ProgressBar
                android:layout_width="0dp"
                android:layout_height="8dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressTint="#8BC34A"
                android:layout_weight="1"
                android:progress="60"
                android:max="100"
                android:progressDrawable="@drawable/rounded_progress_bar"
                />

        </LinearLayout>

        <!-- Average -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginEnd="50dp" />

            <ProgressBar
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/rounded_progress_bar"
                android:progressTint="#CDDC39"
                android:progress="40"
                android:max="100"
               />

        </LinearLayout>

        <!-- Below Average -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Below Average"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <ProgressBar
                android:layout_width="0dp"
                android:layout_height="8dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/rounded_progress_bar"
                android:progressTint="#FFEB3B"
                android:layout_weight="1"
                android:progress="30"
                android:max="100"
                />

        </LinearLayout>

        <!-- Poor -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poor"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginEnd="72dp" />

            <ProgressBar
                android:layout_width="0dp"
                android:layout_height="8dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/rounded_progress_bar"
                android:progressTint="#F44336"
                android:layout_weight="1"
                android:progress="10"
                android:max="100" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/addbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_add_box_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_header" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comment_recycle_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratings_list"
        tools:listitem="@layout/commentcard" />

</androidx.constraintlayout.widget.ConstraintLayout>
