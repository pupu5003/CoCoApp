<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
	android:shape="rectangle">

	<!-- Background Color -->
	<solid android:color="#D4D4D4" /> <!-- White background color -->

	<!-- Corner Radius -->
	<corners android:radius="8dp" /> <!-- Rounded corners -->

	<!-- Stroke (Border) -->
	<stroke
		android:width="1dp"
		android:color="#D4D4D4" /> <!-- Light gray border color -->

	<!-- Padding -->
	<padding
		android:left="10dp"
		android:top="10dp"
		android:right="10dp"
		android:bottom="10dp" />

</shape>
